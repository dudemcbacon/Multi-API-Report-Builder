# Multi-API Report Builder - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control!

# ==============================================================================
# SALESFORCE API CONFIGURATION (JWT Bearer Flow)
# ==============================================================================
# Get these from your Salesforce Connected App
SF_CLIENT_ID=your_salesforce_consumer_key_here
SF_JWT_SUBJECT=your_salesforce_username@company.com
SF_JWT_KEY_PATH=path/to/your/salesforce_private.key
SF_JWT_KEY_ID=optional_key_identifier

# Alternative: Use instance URL if needed
# SF_INSTANCE_URL=https://yourcompany.my.salesforce.com

# ==============================================================================
# WOOCOMMERCE API CONFIGURATION
# ==============================================================================
# Get these from WooCommerce > Settings > Advanced > REST API
WOO_CONSUMER_KEY=ck_your_consumer_key_here
WOO_CONSUMER_SECRET=cs_your_consumer_secret_here
WOO_STORE_URL=https://your-store.com

# ==============================================================================
# AVALARA TAX API CONFIGURATION
# ==============================================================================
# Get these from your Avalara account
AVALARA_API_KEY=your_avalara_api_key_here
AVALARA_COMPANY_CODE=your_company_code

# ==============================================================================
# QUICKBASE API CONFIGURATION
# ==============================================================================
# Get user token from QuickBase > My Preferences > Manage User Tokens
QUICKBASE_USER_TOKEN=your_user_token_here
QUICKBASE_REALM_HOSTNAME=your-realm.quickbase.com
QUICKBASE_APP_ID=your_app_id_here

# ==============================================================================
# SHAREFILE CONFIGURATION (Optional)
# ==============================================================================
# Configure if using ShareFile integration
SHAREFILE_URL=https://your-domain.sharefile.com
SHAREFILE_CLIENT_ID=optional_client_id
SHAREFILE_CLIENT_SECRET=optional_client_secret

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Optional application-level settings
# LOG_LEVEL=INFO
# DEBUG_MODE=false
# MAX_WORKERS=4

# ==============================================================================
# SECURITY NOTES
# ==============================================================================
# 1. Keep your .env file secure and never commit it to version control
# 2. Rotate credentials regularly
# 3. Use different credentials for development and production
# 4. Limit API key permissions to only what's needed
# 5. Store private keys securely outside the project directory if possible
